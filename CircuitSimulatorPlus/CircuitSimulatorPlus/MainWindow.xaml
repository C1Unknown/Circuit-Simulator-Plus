<Window x:Class="CircuitSimulatorPlus.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:local="clr-namespace:CircuitSimulatorPlus"
        Height="700" Width="1000"
        MouseDown="Window_MouseDown" MouseUp="Window_MouseUp"
        MouseMove="Window_MouseMove" MouseWheel="Window_MouseWheel"
        MouseDoubleClick="Window_MouseDoubleClick"
        KeyDown="Window_KeyDown"
        Closing="Window_Closing"
        ContextMenuOpening="Window_ContextMenuOpening">
    <Window.CommandBindings>
        <CommandBinding Command="{x:Static local:Commands.Open}" Executed="Open_Click"/>
        <CommandBinding Command="{x:Static local:Commands.Save}" Executed="Save_Click"/>
        <CommandBinding Command="{x:Static local:Commands.SaveAs}" Executed="SaveAs_Click"/>
        <!--<CommandBinding Command="{x:Static local:Commands.NewComp}" Executed="AddComp_Click"/>-->
        <CommandBinding Command="{x:Static local:Commands.Rename}" Executed="Rename_Click"/>
        <!--<CommandBinding Command="{x:Static local:Commands.AddInput}" Executed="EmptyInput_Click"/>-->
        <!--<CommandBinding Command="{x:Static local:Commands.TrimInput}" Executed="TrimInput_Click"/>-->
        <CommandBinding Command="{x:Static local:Commands.SelectAll}" Executed="SelectAll_Click"/>
        <CommandBinding Command="{x:Static local:Commands.Undo}" Executed="Undo_Click"/>
        <CommandBinding Command="{x:Static local:Commands.Redo}" Executed="Redo_Click"/>
        <CommandBinding Command="{x:Static local:Commands.Copy}" Executed="Copy_Click"/>
        <!--<CommandBinding Command="{x:Static local:Commands.Align}" Executed="Align_Click"/>-->
        <CommandBinding Command="{x:Static local:Commands.Cut}" Executed="Cut_Click"/>
        <CommandBinding Command="{x:Static local:Commands.Paste}" Executed="Paste_Click"/>
        <CommandBinding Command="{x:Static local:Commands.Delete}" Executed="Delete_Click"/>
        <CommandBinding Command="{x:Static local:Commands.ZoomIn}" Executed="ZoomIn_Click"/>
        <CommandBinding Command="{x:Static local:Commands.ZoomOut}" Executed="ZoomOut_Click"/>
    </Window.CommandBindings>
    <Window.ContextMenu>
        <ContextMenu>
            <MenuItem x:Name="contxtMenu_contextGate" Header="Add Context Gate">
                <MenuItem Header="Import From File"/>
            </MenuItem>
            <MenuItem x:Name="contxtMenu_basicGate" Header="Add Component">
                <MenuItem Header="Input Switch" Click="CreateInputSwitch"/>
                <MenuItem Header="Output Light" Click="CreateOutputLight"/>
                <Separator/>
                <MenuItem Header="And Gate" Click="CreateAndGate"/>
                <MenuItem Header="Or Gate" Click="CreateOrGate"/>
                <MenuItem Header="Not Gate" Click="CreateNotGate"/>
            </MenuItem>
            <MenuItem Command="{x:Static local:Commands.Copy}"/>
            <MenuItem Command="{x:Static local:Commands.Cut}"/>
            <MenuItem Command="{x:Static local:Commands.Paste}"/>
            <MenuItem Command="{x:Static local:Commands.Delete}"/>
            <Separator/>
            <MenuItem Header="Align Connection Node">
                <MenuItem Header="UP" Click="Align_U_Click"/>
                <MenuItem Header="DOWN" Click="Align_D_Click"/>
                <MenuItem Header="LEFT" Click="Align_L_Click"/>
                <MenuItem Header="RIGHT" Click="Align_R_Click"/>
            </MenuItem>
            <!--MenuItem Command="{x:Static local:Commands.Split}"/>
            <MenuItem Command="{x:Static local:Commands.Rename}"/>
            <MenuItem Command="{x:Static local:Commands.InvertConnection}"/>
            <MenuItem Command="{x:Static local:Commands.EmptyInput}"/-->
        </ContextMenu>
    </Window.ContextMenu>
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <Menu Height="21" Width="auto" HorizontalAlignment="Stretch" VerticalAlignment="Top">
            <MenuItem Header="File" Width="auto">
                <MenuItem Command="{x:Static local:Commands.New}"/>
                <MenuItem Command="{x:Static local:Commands.Open}"/>
                <MenuItem Header="Open Recent"/>
                <MenuItem Header="Print"/>
                <Separator/>
                <MenuItem Command="{x:Static local:Commands.Save}"/>
                <MenuItem Command="{x:Static local:Commands.SaveAs}"/>
            </MenuItem>
            <MenuItem Header="Edit" Width="auto">
                <MenuItem Command="{x:Static local:Commands.Undo}"/>
                <MenuItem Command="{x:Static local:Commands.Redo}"/>
                <Separator/>
                <MenuItem Command="{x:Static local:Commands.Copy}"/>
                <MenuItem Command="{x:Static local:Commands.Cut}"/>
                <MenuItem Command="{x:Static local:Commands.Paste}"/>
                <MenuItem Command="{x:Static local:Commands.Delete}"/>
            </MenuItem>
            <MenuItem Header="View" Width="auto">
                <MenuItem Header="Default View" Click="DefaultView_Click"/>
                <MenuItem Command="{x:Static local:Commands.ZoomIn}"/>
                <MenuItem Command="{x:Static local:Commands.ZoomOut}"/>
            </MenuItem>
            <MenuItem Header="Tools" Width="auto">
                <MenuItem Command="{x:Static local:Commands.Add}"/>
                <MenuItem Command="{x:Static local:Commands.Rename}"/>
                <MenuItem Command="{x:Static local:Commands.SelectAll}"/>
                <Separator/>
                <MenuItem Command="{x:Static local:Commands.AddInput}"/>
                <MenuItem Command="{x:Static local:Commands.TrimInput}"/>
                <Separator/>
                <MenuItem Command="{x:Static local:Commands.InvertConnection}"/>
                <MenuItem Command="{x:Static local:Commands.CreateCable}"/>
                <Separator/>
                <MenuItem Header="Next Tick"/>
            </MenuItem>
            <MenuItem Header="Debug" Width="auto">
                <MenuItem Header="Single Ticks" Click="SingleTicks_Click"/>
                <MenuItem Header="Tick All Nodes" Click="TickAll_Click"/>
            </MenuItem>
        </Menu>
        <Canvas x:Name="backgoundLayerCanvas" Grid.Row="2" SnapsToDevicePixels="True"/>
        <Canvas x:Name="canvas" Grid.Row="2" SnapsToDevicePixels="True"/>
        <Canvas x:Name="decorationLayerCanvas" Grid.RowSpan="2" SnapsToDevicePixels="True">
            <Rectangle x:Name="selectVisual" Stroke="{DynamicResource {x:Static SystemColors.MenuHighlightBrushKey}}" Fill="#3F0078D7"/>
        </Canvas>
    </Grid>
</Window>
