<Window x:Class="CircuitSimulatorPlus.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CircuitSimulatorPlus"
        Height="700" Width="1000"
        KeyDown="Window_KeyDown"
        MouseDown="Window_MouseDown" MouseUp="Window_MouseUp"
        MouseMove="Window_MouseMove" MouseWheel="Window_MouseWheel"
        Closing="Window_Closing"
        ContextMenuOpening="Window_ContextMenuOpening">

    <Window.ContextMenu>

        <ContextMenu>

            <MenuItem x:Name="contxtMenu_contextGate" Header="Add Context Gate">

                <MenuItem Header="Import From File" Click="ContextGate_Click"/>

            </MenuItem>

            <MenuItem x:Name="contxtMenu_basicGate" Header="Add Basic Gate">

                <MenuItem Header="Add And Gate" Click="CreateAndGate"/>
                <MenuItem Header="Add Or Gate" Click="CreateOrGate"/>
                <MenuItem Header="Add Not Gate" Click="CreateNotGate"/>

            </MenuItem>

            <MenuItem Header="Copy" InputGestureText="Ctrl+C" Click="Copy_Click"/>
            <MenuItem Header="Cut" InputGestureText="Ctrl+X" Click="Cut_Click"/>
            <MenuItem Header="Paste" InputGestureText="Ctrl+V" Click="Paste_Click"/>
            <MenuItem Header="Remove" InputGestureText="Del" Click="Delete_Click"/>

            <MenuItem Header="Rename" InputGestureText="Ctrl+R" Click="Rename_Click"/>
            <MenuItem Header="Invert Connection" InputGestureText="Ctrl+." Click="InvertConnection_Click"/>
            <MenuItem Header="Add Empty Input" InputGestureText="Ctrl+," Click="EmptyInput_Click"/>

        </ContextMenu>

    </Window.ContextMenu>

    <Grid>

        <Grid.RowDefinitions>

            <RowDefinition Height="Auto"/>
            <RowDefinition/>

        </Grid.RowDefinitions>

        <Canvas x:Name="backgoundLayerCanvas" Grid.Row="1" RenderOptions.EdgeMode="Aliased" SnapsToDevicePixels="True"/>

        <Canvas x:Name="canvas" Grid.Row="1" RenderOptions.EdgeMode="Aliased" SnapsToDevicePixels="True"/>

        <Canvas x:Name="decorationLayerCanvas" RenderOptions.EdgeMode="Aliased" Grid.RowSpan="2">

            <Rectangle x:Name="selectVisual"
                    Stroke="{DynamicResource {x:Static SystemColors.MenuHighlightBrushKey}}"
                    Fill="#3F0078D7"
                    SnapsToDevicePixels="True"/>

        </Canvas>

        <Menu Height="21" Width="auto" HorizontalAlignment="Stretch" VerticalAlignment="Top">

            <MenuItem Header="File" Width="auto">

                <MenuItem Header="New Circuit" InputGestureText="Ctrl+N" Click="New_Click"/>
                <MenuItem Header="Open Circuit" InputGestureText="Ctrl+O" Click="Open_Click"/>
                <MenuItem Header="Open Recent"/>
                <MenuItem Header="Print" InputGestureText="Ctrl+P" Click="Print_Click"/>
                <MenuItem Header="Save" InputGestureText="Ctrl+S" Click="Save_Click"/>
                <MenuItem Header="Save As..." InputGestureText="Ctrl+Shift+S" Click="SaveAs_Click"/>

            </MenuItem>

            <MenuItem Header="Edit" Width="auto">

                <MenuItem Header="Undo" InputGestureText="Ctrl+Z" Click="Undo_Click"/>
                <MenuItem Header="Redo" InputGestureText="Ctrl+Shift+Z" Click="Redo_Click"/>
                <MenuItem Header="Copy" InputGestureText="Ctrl+C" Click="Copy_Click"/>
                <MenuItem Header="Cut" InputGestureText="Ctrl+X" Click="Cut_Click"/>
                <MenuItem Header="Paste" InputGestureText="Ctrl+V" Click="Paste_Click"/>
                <MenuItem Header="Remove" InputGestureText="Del" Click="Delete_Click"/>

            </MenuItem>

            <MenuItem Header="View" Width="auto">

                <MenuItem Header="Default View" Click="DefaultView_Click"/>
                <MenuItem Header="Zoom In" InputGestureText="Ctrl++" Click="ZoomIn_Click"/>
                <MenuItem Header="Zoom Out" InputGestureText="Ctrl+-" Click="ZoomOut_Click"/>

            </MenuItem>

            <MenuItem Header="Tools" Width="auto">

                <MenuItem Header="New Component" Click="NewGate_Click"/>
                <MenuItem Header="Rename Gate" Click="Rename_Click"/>
                <MenuItem Header="Resize Gate" Click="ResizeGate_Click"/>
                <MenuItem Header="Empty Input" Click="EmptyInput_Click"/>
                <MenuItem Header="Remove Extra Inputs" Click="TrimInput_Click"/>
                <MenuItem Header="Invert Connection" Click="InvertConnection_Click"/>
                <MenuItem Header="Select All" Click="SelectAll_Click"/>

            </MenuItem>

            <MenuItem Header="Debug" Width="auto">

                <MenuItem Header="Single Ticks" Click="SingleTicks_Click"/>
                <MenuItem Header="Tick All Nodes" Click="TickAll_Click"/>

            </MenuItem>

        </Menu>

    </Grid>

</Window>
