<Window x:Class="CircuitSimulatorPlus.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CircuitSimulatorPlus"
        Height="700" Width="1000"
        KeyDown="Window_KeyDown" KeyUp="Window_KeyUp"
        MouseDown="Window_MouseDown" MouseUp="Window_MouseUp"
        MouseMove="Window_MouseMove" MouseWheel="Window_MouseWheel"
        Closing="Window_Closing"
        ContextMenuOpening="Window_ContextMenuOpening">

    <Window.CommandBindings>

        <CommandBinding Command="{x:Static local:Commands.Open}" Executed="OpenFile_Click"/>
        <CommandBinding Command="{x:Static local:Commands.Save}" Executed="SaveFile_Click" CanExecute="Allow_Save"/>
        <CommandBinding Command="{x:Static local:Commands.SaveAs}" Executed="SaveFileAs_Click" CanExecute="Allow_SaveAs"/>
        <CommandBinding Command="{x:Static local:Commands.NewComp}" Executed="NewGate_Click"/>
        <CommandBinding Command="{x:Static local:Commands.Rename}" Executed="Rename_Click" CanExecute="Allow_Rename"/>
        <CommandBinding Command="{x:Static local:Commands.AddInput}" Executed="EmptyInput_Click" CanExecute="Allow_EmptyInput"/>
        <CommandBinding Command="{x:Static local:Commands.TrimInput}" Executed="TrimInput_Click" CanExecute="Allow_TrimInput"/>
        <CommandBinding Command="{x:Static local:Commands.SelectAll}" Executed="SelectAll_Click"/>
        <CommandBinding Command="{x:Static local:Commands.Undo}" Executed="Undo_Click" CanExecute="Allow_Undo"/>
        <CommandBinding Command="{x:Static local:Commands.Redo}" Executed="Redo_Click" CanExecute="Allow_Redo"/>
        <CommandBinding Command="{x:Static local:Commands.Copy}" Executed="Copy_Click" CanExecute="Allow_Copy"/>
        <CommandBinding Command="{x:Static local:Commands.Cut}" Executed="Cut_Click" CanExecute="Allow_Cut"/>
        <CommandBinding Command="{x:Static local:Commands.Paste}" Executed="Paste_Click" CanExecute="Allow_Paste"/>
        <CommandBinding Command="{x:Static local:Commands.Delete}" Executed="Delete_Click" CanExecute="Allow_Delete"/>
        <CommandBinding Command="{x:Static local:Commands.ZoomIn}" Executed="ZoomIn_Click"/>
        <CommandBinding Command="{x:Static local:Commands.ZoomOut}" Executed="ZoomOut_Click"/>

    </Window.CommandBindings>

    <Window.ContextMenu>

        <ContextMenu>

            <MenuItem x:Name="contxtMenu_contextGate" Header="Add Context Gate">

                <MenuItem Header="Import From File" Click="ContextGate_Click"/>

            </MenuItem>

            <MenuItem x:Name="contxtMenu_basicGate" Header="Add Basic Gate">

                <MenuItem Header="Add And Gate" Click="CreateAndGate"/>
                <MenuItem Header="Add Or Gate" Click="CreateOrGate"/>
                <MenuItem Header="Add Not Gate" Click="CreateNotGate"/>

            </MenuItem>

            <!--<MenuItem Command="{x:Static local:Commands.ChangeType}"/>-->
            <MenuItem Command="{x:Static local:Commands.Copy}"/>
            <MenuItem Command="{x:Static local:Commands.Cut}"/>
            <MenuItem Command="{x:Static local:Commands.Paste}"/>
            <MenuItem Command="{x:Static local:Commands.Delete}"/>

            <MenuItem Command="{x:Static local:Commands.Rename}"/>
            <MenuItem Command="{x:Static local:Commands.InvertConnection}"/>
            <MenuItem Command="{x:Static local:Commands.AddInput}"/>

        </ContextMenu>

    </Window.ContextMenu>

    <Grid>

        <Grid.RowDefinitions>

            <RowDefinition Height="Auto"/>
            <RowDefinition/>

        </Grid.RowDefinitions>

        <Canvas x:Name="backgoundLayerCanvas" Grid.Row="1"/>

        <Canvas x:Name="canvas" Grid.Row="1"/>

        <Canvas x:Name="decorationLayerCanvas" Grid.RowSpan="2">

            <Rectangle x:Name="selectVisual" Stroke="{DynamicResource {x:Static SystemColors.MenuHighlightBrushKey}}" Fill="#3F0078D7"/>

        </Canvas>

        <Menu Height="21" Width="auto" HorizontalAlignment="Stretch" VerticalAlignment="Top">

            <MenuItem Header="File" Width="auto">

                <MenuItem Header="New Circuit" Click="NewFile_Click"/>
                <MenuItem Header="Open Circuit" Click="OpenFile_Click"/>
                <MenuItem Header="Open Recent"/>
                <MenuItem Header="Save" Click="SaveFile_Click"/>
                <MenuItem Header="Save As..." Click="SaveFileAs_Click"/>

            </MenuItem>

            <MenuItem Header="Edit" Width="auto">

                <MenuItem Command="{x:Static local:Commands.Undo}"/>
                <MenuItem Command="{x:Static local:Commands.Redo}"/>
                <MenuItem Command="{x:Static local:Commands.Copy}"/>
                <MenuItem Command="{x:Static local:Commands.Cut}"/>
                <MenuItem Command="{x:Static local:Commands.Paste}"/>
                <MenuItem Command="{x:Static local:Commands.Delete}"/>

            </MenuItem>

            <MenuItem Header="View" Width="auto">

                <MenuItem Header="Default View" Click="DefaultView_Click"/>
                <MenuItem Command="{x:Static local:Commands.ZoomIn}"/>
                <MenuItem Command="{x:Static local:Commands.ZoomOut}"/>

            </MenuItem>

            <MenuItem Header="Tools" Width="auto">

                <MenuItem Header="New Component" Click="NewGate_Click"/>
                <MenuItem Header="Rename Gate" Click="Rename_Click"/>
                <MenuItem Header="Resize Gate" Click="ResizeGate_Click"/>
                <MenuItem Header="Empty Input" Click="EmptyInput_Click"/>
                <MenuItem Header="Remove Extra Inputs" Click="TrimInput_Click"/>
                <MenuItem Header="Invert Connection" Click="InvertConnection_Click"/>
                <MenuItem Header="Select All Gates" Click="SelectAll_Click"/>

            </MenuItem>

            <MenuItem Header="Debug" Width="auto">

                <MenuItem Header="Single Ticks" Click="SingleTicks_Click"/>
                <MenuItem Header="Tick All Nodes" Click="TickAll_Click"/>

            </MenuItem>

        </Menu>

    </Grid>

</Window>
