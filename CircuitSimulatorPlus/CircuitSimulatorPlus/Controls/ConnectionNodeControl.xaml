<UserControl x:Class="CircuitSimulatorPlus.Controls.ConnectionNodeControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:global="clr-namespace:CircuitSimulatorPlus"
             xmlns:local="clr-namespace:CircuitSimulatorPlus.Controls"
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300">
    <Canvas>
        <Line x:Name="connectionNodeLine" StrokeThickness="{x:Static global:Constants.LineWidth}"/>
        <Line x:Name="nameLabel" StrokeThickness="{x:Static global:Constants.LineWidth}"/>
        <Ellipse x:Name="invertionDot"
                 Width="{x:Static global:Constants.InversionDotDiameter}"
                 Height="{x:Static global:Constants.InversionDotDiameter}"/>
    </Canvas>
</UserControl>
