<UserControl x:Class="CircuitSimulatorPlus.Controls.WireControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:CircuitSimulatorPlus.Controls"
             mc:Ignorable="d" 
             d:DesignHeight="0" d:DesignWidth="0" Loaded="UserControl_Loaded" MouseUp="UserControl_MouseUp" MouseMove="UserControl_MouseMove">
    <Canvas>
        <Ellipse x:Name="startEllipse" Stroke="Black" Width="1" Height="1" MouseDown="ellipse_MouseDown" Canvas.Left="0" Canvas.Top="0" Fill="Transparent" StrokeThickness="0.1" MouseEnter="ellipse_MouseEnter" MouseLeave="ellipse_MouseLeave"/>
        <Ellipse x:Name="endEllipse" Stroke="Black" Width="1" Height="1" MouseDown="ellipse_MouseDown" Canvas.Left="1" Canvas.Top="1" Fill="Transparent" StrokeThickness="0.1" MouseEnter="ellipse_MouseEnter" MouseLeave="ellipse_MouseLeave"/>
        <Line x:Name="line" Stroke="Black" X1="0.5" X2="1.5" Y1="0.5" Y2="1.5" IsHitTestVisible="False" StrokeThickness="0.1" MouseDown="line_MouseDown"/>
    </Canvas>
</UserControl>
